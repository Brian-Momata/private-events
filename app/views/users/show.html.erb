<h1>Your events</h1>

<% if !@user.events.empty? %>
  <h2>Events you're hosting</h2>
  <ul>
    <% @user.events.each do |event|%>
      <li>
        Date: <%= event.date %><br>
        Location: <%= event.location %><br>
        <%= link_to "Check details", user_event_path(current_user, event)%>
      </li>
    <% end %>
  </ul>
<% end %>

<h2>Events where you're invited</h2>
<ul>
  <% @user.events_invited.each do |event| %>
    <li>
        Date: <%= event.date %><br>
        Location: <%= event.location %><br>
        <%= link_to "Check details", user_event_path(current_user, event)%>
    </li>
  <% end %>
</ul>
<%= link_to "Create an Event", new_user_event_path(current_user) %><br>
<%= link_to "Home", root_path %>

